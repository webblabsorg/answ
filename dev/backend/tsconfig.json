{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/main.ts",
    "src/app.module.ts",
    "src/auth/**/*.ts",
    "src/users/**/*.ts",
    "src/exams/**/*.ts",
    "src/questions/**/*.ts",
    "src/test-sessions/**/*.ts",
    "src/grading/**/*.ts",
    "src/prisma/**/*.ts",
    "src/cache/**/*.ts",
    "src/audit-logs/**/*.ts",
    "src/admin/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/billing/**",
    "src/compliance/**",
    "src/enterprise/**",
    "src/ai/**",
    "src/_disabled_*/**"
  ]
}
